{
    "version": 6,
    "configurePresets": [
        {
            "name": "default",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}"
        },
        {
            "name": "msvc-default",
            "inherits": "default",
            "hidden": true,
            "displayName": "MSVC 2022",
            "description": "Default build using MSVC generator",
            "generator": "Visual Studio 17 2022"
        },
        {
            "name": "msvc-release",
