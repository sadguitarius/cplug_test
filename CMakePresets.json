        },
        {
            "name": "clang-relwithdebuginfo",
            "displayName": "Ninja Clang Release With Debug Info",
            "inherits": "clang-default",
            "description": "RelWithDebugInfo Clang build using Ninja generator",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebugInfo"
            }
        }
